<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
    tools:context="com.example.f_mkotsovoulou.orderapp.MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plain Margarita Unit Price"
        android:fontFamily="cursive"
        android:typeface="normal"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimaryDark" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.50 Euros"
        android:fontFamily="casual"
        android:typeface="normal"
        android:textSize="30sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/margarita"
            android:id="@+id/imageView"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any Extras ?"
        android:fontFamily="cursive"
        android:typeface="normal"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="?android:attr/colorAccent" />

    <CheckBox
        android:text="Pepperoni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pepperoni" />

    <CheckBox
        android:text="Ham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ham" />

    <CheckBox
        android:text="Cheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cheese" />

    <CheckBox
        android:text="Bacon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bacon" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity : "
            android:fontFamily="cursive"
            android:typeface="normal"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/quantity" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price : "
            android:fontFamily="cursive"
            android:typeface="normal"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="cursive"
            android:typeface="normal"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/background_dark" />
    </LinearLayout>

    <Button
        android:text="Place Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitOrder"
        android:onClick="submitOrder"/>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:typeface="normal"
        android:textSize="36sp"
        android:textStyle="bold" />
</LinearLayout>
